def aSmallRecord (a : { x : Int, y : Int | r }) -> Int do 
  let b = { x = a.x, y = a.y } in 
  b.x + b.y

def map {a, b} (f : a -> b) (xs : List a) -> List b do 
  match xs with
  | Nil -> 
    -- Nested match blocks should be delimited with 'end' to disambiguate
    match xs with 
    | Nil -> Nil
    | Cons x xs -> fail
    end
  | Cons x xs -> Cons (f x) (map f xs)

